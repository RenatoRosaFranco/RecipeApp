<% provide :title, 'Home' %>

<section id="presenter" class="jumbotron" style='background-color: #FFF;'>
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<h1 style='margin-bottom: 30px; margin-top: -10px;'>cookApp</h1>
				
				<%= form_for :search do |f| %>
