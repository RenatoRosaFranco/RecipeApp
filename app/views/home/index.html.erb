						<li><%= link_to 'categorias', recipes_path(category: 'milho') %></li> 
					</ul>
				</div>

				<div class="col-md-12">
					<%= button_to 'Criar Receita', new_recipe_path, 
					class: 'btn btn-success btn-lg top', method: :get %>
				</div>
			</div>
		</div>
	</div>
</section>

